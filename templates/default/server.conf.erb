input {
  <% if  node['logstash']['server']['inputs'].empty? -%>
  tcp {
    type => "tcp-input"
    port => "5959"
    format => "json_event"
  }
  <% else %>    
    <% node['logstash']['server']['inputs'].each do |input| -%>
     
        <% input.each do |name,hash| -%> 
             <%= name %> {
                 <% hash.each do |k,v| -%>         
                       <%= k %> => "<%= v %>"
                 <% end -%>
        <% end -%>
        }
     <% end -%>
  <% end -%>
}

output {
	stdout { debug => true debug_format => "json" }
	<% if @enable_embedded_es -%>
	elasticsearch { embedded => true }
	<% else -%>
	elasticsearch { host => "<%= @es_server.first.ipaddress %>" cluster => "<%= @es_cluster %>" }
	<% end -%>
	<% unless @graphite_server.empty? -%>
	graphite { host => "<%= @graphite_server.first.ipaddress %>" metrics => ["logstash.events", "1"] }
	<% end -%>

  <% unless  node['logstash']['server']['outputs'].empty? -%>
      <% node['logstash']['server']['outputs'].each do |output| -%>
        <% output.each do |name,hash| -%> 
             <%= name %> {
                 <% hash.each do |k,v| -%>         
                       <%= k %> => "<%= v %>"
                 <% end -%>
        <% end -%>
              }
      <% end -%>
  <% end -%>

}
